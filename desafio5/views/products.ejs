<%- include("./partials/head.ejs") -%>
<body class="bg-dark text-center">
    <% if (products.length > 0) { %>
      <h1 class="text-white mt-5">PRODUCTS LIST</h1>
      <table class="table table-dark table-bordered border-light">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">NAME</th>
              <th scope="col">PRICE</th>
              <th scope="col">IMG</th>
            </tr>
          </thead>
          <tbody>
            <% for (const product of products) { %>
              <tr>
                <td>#<%=product.id%></td>
                <td><%=product.name%></td>
                <td>$<%=product.price%></td>
                <td><img src="<%=product.src%>" alt="<%=product.name%> banner" style="max-width: 100px"></td>
              </tr>
            <% } %> 
          </tbody>
        </table>
    <% } else { %>
      <h1>PRODUCTS LIST EMPTY</h1>
    <% } %>  
    <%- include("./partials/nav.ejs") -%> 
</body>
</html>