{{#if products.length}}
    <h1 class="text-white my-5">PRODUCTS LIST</h1>
    <table class="table table-dark table-bordered border-light">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">NAME</th>
                <th scope="col">PRICE</th>
                <th scope="col">IMG</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
                <tr>
                    <td>#{{this.id}}</td>
                    <td>{{this.name}}</td>
                    <td>${{this.price}}</td>
                    <td><img src="{{this.src}}" alt="{{this.name}} banner"></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <h1>PRODUCTS LIST EMPTY</h1>
{{/if}}